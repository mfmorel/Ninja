<Window x:Class="Ninja.View.LoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ninja.View"
        mc:Ignorable="d"
        Title="LoadScreen" 
        Height="500" 
        Width="500"
        DataContext="{Binding LoadScreen, Source={StaticResource Locator}}">
    <Grid>
        <ProgressBar Value="{Binding Progress}" x:Name="LoadBar" HorizontalAlignment="Left" Height="25" Margin="156,123,0,0" VerticalAlignment="Top" Width="176" Background="Black" Foreground="Red"/>
    </Grid>
</Window>
