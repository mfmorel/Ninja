<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ninja.View"
        xmlns:ninja="clr-namespace:Ninja"
        x:Class="Ninja.View.LoadScreen"
        mc:Ignorable="d"
        Title="LoadScreen" 
        Height="45" 
        Width="300"
        Background="Black"
        DataContext="{Binding LoadScreen, Source={StaticResource Locator}}" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <ProgressBar 
            
            Value="{Binding Progress}" 
            x:Name="LoadBar" 
            HorizontalAlignment="Center" 
            Height="40" 
            VerticalAlignment="Center" 
            Width="292" 
            Background="Black" Foreground="Red"/>

        <TextBlock Text="{Binding LoadBarText}"
                   HorizontalAlignment="Center"
                   Height="24" Foreground="White"/>
    </Grid>
</Window>
